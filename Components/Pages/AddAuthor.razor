@using Microsoft.AspNetCore.Components.Forms
@page "/add-author"
@page "/authors/{Id:int}"
@inherits AddAuthorBase
@rendermode InteractiveServer

<h1>@(@author.Id != 0 ? "Edit" : "Add") Author</h1>
<EditForm Model="author" OnValidSubmit="HandleValidSubmit" FormName="addAuthorForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group row mb-3">
        <label for="txtTitle" class="col-sm-2 col-form-label">Author Name</label>
        <div class="col-sm-10">
            <InputText class="form-control" id="txtTitle" placeholder="Author name" @bind-Value="@author.AuthorName" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary w-25" value="Submit" />
        </div>
    </div>
</EditForm>
